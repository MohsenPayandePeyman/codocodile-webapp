<%- include('head-template'); %>
<div class="mx-5 my-5">
    <div class="row">
        <div class="col-sm"></div>
        <div class="col-sm text-align">
            <div class="login  text-align" style="padding-top: 50px; padding-bottom: 50px">
                <h1>Create Post</h1>
                <br>
                <form action="" method="post" class="needs-validation mb-3" enctype="multipart/form-data" id="theForm">
                    <div class="mb-3">
                        <input class="form-control shadow rounded-pill" type="file" name="file"
                            accept=".jpg,.png,.jpeg,.tif,.tiff" id="formFile">
                    </div>
                    <div class="form-floating mb-3">
                        <textarea class="form-control shadow rounded-xl" id="floatingInput" rows="5" name="caption"
                            required></textarea>
                        <label for="floatingInput">Caption</label>
                        <div class="invalid-feedback">
                            This field cannot be empty
                        </div>
                    </div>
                    <button onclick="validateForm()" type="submit" class="btn btn-primary shadow fs-5">Craete
                        Post</button>
                </form>
            </div>
        </div>
        <div class="col-sm"></div>
    </div>
</div>
<%- include('foot-template'); %>